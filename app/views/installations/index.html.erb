<h1>Lista de tickets de instalação</h1>

<table>
  <tr>
    <th>Projeto</th>
    <th>Código do projeto</th>
    <th>Descrição</th>
    <th>Instalado em homologação</th>
    <th>Instalar batch</th>
    <th>Instalar web</th>
    <th>Instalar messaging</th>
    <th>Data de instalação em produção</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @installations.each do |installation| %>
  <tr>
    <td><%= installation.project %></td>
    <td><%= installation.project_code %></td>
    <td><%= installation.description %></td>
    <td><%= installation.installed_on_approval %></td>
    <td><%= installation.server_to_install_batch %></td>
    <td><%= installation.server_to_install_web %></td>
    <td><%= installation.server_to_install_messaging %></td>
    <td><%= installation.production_installation_date %></td>
    <td><%= link_to 'Visualizar', installation %></td>
    <td><%= link_to 'Editar', edit_installation_path(installation) %></td>
    <td><%= link_to 'Deletar', installation, :confirm => 'Você tem certeza que deseja deletar este ticket?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

