<h1>Lista de tickets de instalação</h1>

<table class="stats">
  <tr>
    <th>Código do projeto</th>
    <th>Projeto</th>
    <th>Instalado em homologação</th>
    <th>Data de instalação em produção</th>
    <th>Foi necessário voltar para versão anterior</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @installations.each do |installation| %>
  <tr>
    <td><%= installation.project_code %></td>
    <td><%= installation.project %></td>
    <td><%= installation.installed_on_approval %></td>
    <td><%= installation.production_installation_date %></td>
	<td><%= installation.had_to_rollback %></td>
    <td><%= link_to image_tag("show.png", :border => 0), installation %></td>
    <td><%= link_to image_tag("edit.png", :border => 0), edit_installation_path(installation) %></td>
    <td><%= link_to image_tag("delete.png", :border => 0), installation, :confirm => 'Você tem certeza que deseja deletar este ticket?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

